<h1>Sign in</h1>

<div class="span6 offset3">
  <%= form_for(:session, url: sessions_path) do |f| %>

    <div class="row">
      <div class="col-md-2">
        <%= f.label :email %>
      </div>
      <div class="col-md-2">
        <%= f.text_field :email %>
      </div>
    </div>

    <div class="row">
      <div class="col-md-2">
        <%= f.label :password %>
      </div>
      <div class="col-md-2">
        <%= f.password_field :password %>
      </div>
    </div>

    <%= f.submit "Sign in", class: "btn btn-large btn-primary" %>
  <% end %>

  <p>New user? <%= link_to "Sign up now!", signup_path %></p>
</div>