<table class="table table-bordered">
    <thead>
      <tr>
        <th>Данные одометра, км</th>
        <th>Пробег, км</th>
        <th>Заправлено, л</th>
        <th>Стоимость топлива, грн</th>
        <th>Бензозаправка</th>
        <th>Марка бенза</th>
        <th>Управление</th>
      </tr>
    </thead>

    <tbody>
      <% @view_stata_fuel.each do |fuel_stata| %>
        <tr>
          <td><%= fuel_stata.odo %></td>
          <td><%= fuel_stata.odo_delta %></td>
          <td><%= fuel_stata.refueling %></td>
          <td><%= fuel_stata.price_fuel %></td>
          <td><%= fuel_stata.fuel_station %></td>
          <td><%= fuel_stata.fuel_type %></td>
          <td>
            <%= link_to 'Редактировать', edit_bike_stata_fuel_path(id: fuel_stata.id) %><br/>
            <%= link_to 'Удалить', bike_stata_fuel_path(id: fuel_stata.id), 
                                  method: :delete, 
                                  data: { confirm: 'Уверен что хочешь удалить запись?' } %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>