  <script src="https://cdn.zingchart.com/zingchart.min.js"></script>
  
<h2> Топливная статистика байка <%= @bike.name %>, владелец <%= @bike.user_name %> </h2>

  <% if @stata_err.errors.any? %>
    <div id="error_explanation" class="alert alert-danger" role="alert">
  	    <h2>
          <span class="glyphicon glyphicon-alert" aria-hidden="true"></span>
           При вводе данных возникло ошибок: <%= @stata_err.errors.count %>
        </h2>
            
        <ul>
          <% @stata_err.errors.each do |attribute, error| %>
            <li><%= error %></li>
          <% end %>
        </ul>
    </div>
  <% end %>


<% get_stata_l_na_100_km %>  


  <div id='chartDivRashod'></div>


  <%= render 'form_fuel_create', stata_fuel: @stata_fuel %>
<div>
  <hr/>
    <%= render 'table_view_stata_fuel' %>
</div>




<script>
    var chartRashod = {
      type: "bar",  // Specify your chart type here.
      title: {
        text: "средний расход, л/100 км" // Adds a title to your chart
      },
      legend: {}, // Creates an interactive legend
      series: [  // Insert your series data here.
          { values: <%= JSON.parse(@json_stata_l_na_100_km) %> }
      ]
    };

    zingchart.render({ // Render Method[3]
      id: "chartDivRashod",
      data: chartRashod,
      height: 400,
      width: 600
    });
</script>