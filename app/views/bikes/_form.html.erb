<%= form_for(@bike) do |f| %>

  <div class="field">
    <%= f.label :name, 'Модель байка' %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :user_name, 'Логин владельца' %>
    <%= f.text_field :user_name %>
  </div>

  <div class="field">
    <%= f.label :year, 'Год выпуска' %>
    <%= f.number_field :year %>
  </div>

  <div class="field">
    <%= f.label :color, 'Цвет' %>
    <%= f.text_field :color %>
  </div>

  <div class="actions">
    <%= f.submit 'Сохранить' %>
  </div>
<% end %>
