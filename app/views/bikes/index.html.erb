<p id="notice"><%= notice %></p>

<h1>Bikes</h1>

  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>User</th>
        <th>Year</th>
        <th>Color</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @bikes.each do |bike| %>
        <tr>
          <td><%= link_to bike.name, bike %></td>
          <td><%= bike.user_id %></td>
          <td><%= bike.year %></td>
          <td><%= bike.color %></td>
          <td><%= link_to 'Show', bike %><br/>
          <%= link_to 'Edit', edit_bike_path(bike) %><br/>
          <%= link_to 'Destroy', bike, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

<hr>

    <%= link_to 'New Bike', new_bike_path %>
