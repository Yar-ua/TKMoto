<h1>Мото:</h1>

  <table class="table table-striped">
    <thead>
      <tr>
        <th>Модель</th>
        <th>Логин владельца</th>
        <th>Год выпуска</th>
        <th>Цвет</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @bikes.each do |bike| %>
        <tr>

          <td><%= link_to bike.name, bike %><hr/>
            <%= link_to 'Топливная статистика', new_bike_stata_fuel_path(bike) %>
          </td>
          <td><%= bike.user_name %></td>
          <td><%= bike.year %></td>
          <td><%= bike.color %></td>
          <td>

          </td>

          <td>
            <%= link_to 'Показать', bike %><br/>
            <%= link_to 'Редактировать', edit_bike_path(bike) %><br/>
            <%= link_to 'Удалить', bike, method: :delete, data: { confirm: 'Уверен что хочешь удалить байк и всю статистику?' } %>
          </td>
        
        </tr>
      <% end %>
    </tbody>
  </table>

