<p id="notice"><%= notice %></p>

<h1>Bikes</h1>

  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>User_id</th>
        <th>Year</th>
        <th>Color</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @bikes.each do |bike| %>
        <tr>

          <td><%= link_to bike.name, bike %><hr/>
            <%= link_to 'Add fuel data', new_fuel_stata_path %> |
            <%= link_to 'Add repair data', new_fuel_stata_path %>
          </td>
          <td><%= bike.user_id %></td>
          <td><%= bike.year %></td>
          <td><%= bike.color %></td>
          <td>
            <%= link_to 'Show fuel statistics', fuel_stata_path %><br/>
            <%= link_to 'Show repair statistics', fuel_stata_path %><br/>
          </td>

          <td>
            <%= link_to '##Show bike', bike %><br/>
            <%= link_to 'Edit bike', edit_bike_path(bike) %><br/>
            <%= link_to 'Destroy bike', bike, method: :delete, data: { confirm: 'Are you sure?' } %>
          </td>
        
        </tr>
      <% end %>
    </tbody>
  </table>

<hr>

