<h1>Bikes</h1>

  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>User_name</th>
        <th>Year</th>
        <th>Color</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @bikes.each do |bike| %>
        <tr>

          <td><%= link_to bike.name, bike %><hr/>
            <%= link_to 'Fuel statistics', new_bike_stata_fuel_path(bike) %>
          </td>
          <td><%= bike.user_name %></td>
          <td><%= bike.year %></td>
          <td><%= bike.color %></td>
          <td>

          </td>

          <td>
            <%= link_to 'Show bike', bike %><br/>
            <%= link_to 'Edit bike', edit_bike_path(bike) %><br/>
            <%= link_to 'Destroy bike', bike, method: :delete, data: { confirm: 'Are you sure?' } %>
          </td>
        
        </tr>
      <% end %>
    </tbody>
  </table>

